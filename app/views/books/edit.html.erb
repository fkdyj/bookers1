<h1>Editing Book</h1>
<div class="edit">
<% if @book.errors.any? %>
<div class="error-main">
  <div class="error">
  <%= @book.errors.count %> errors prohibited this book from being saved:
  </div>
  <ul class="errors">
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>
<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
<br>
  <%= f.submit 'Update Book' %>

<div class="edit-edit">
<%= link_to "Show", book_path(@book.id) %>&nbsp|&nbsp
<%= link_to "Back", books_path %>
</div>
<% end %>
</div>
